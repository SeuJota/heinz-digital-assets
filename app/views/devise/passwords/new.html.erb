<style> 
	body {
		background-color: rgb(238, 238, 238);
	}
	#error_explanation ul {
		max-width: 240px;
		margin: 0 auto;
		color: #b31c24;
		text-align: center;
		list-style-type: none;
		padding: 0px;
		margin-bottom: 10px;
	}
	h3 {
		font-size: 1.4em;
	}
	.blues {
		margin-top: 5%;
		max-width: 500px;
	}
</style>
<div class="container text-center blues">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role: "form", :class => "form-horizontal", style: "max-width: 330px;padding: 15px; margin: 0 auto;"}) do |f| %>
		<%= render partial: "devise/header" %>
		<h3 class="text-center" style="margin-top: 25px; margin-bottom: 20px; font-weight: 700;">Forgot your password?</h3>
		<div class="text=center">
			<p id="alert"><%= alert %></p>
			<p id="notice"><%= notice %></p>
			<%= devise_error_messages! %>
		</div>
		<div>
			<%= f.email_field :email, autofocus: true, :class => "form-control", placeholder: "Email address", style:"margin-bottom: 10px;"  %>
			<div style="margin-bottom: 10px;"> <%= f.submit "Reset password", :class => "btn btn-lg btn-primary btn-block", style:"margin-bottom: 10px; width: 300px; margin: 0 auto;" %></div>
			<div style="text-align: left; width: 300px; margin: 0 auto;"> 
				<%= render "devise/shared/links" %>
			</div>
		</div>
	<% end %>
</div>
