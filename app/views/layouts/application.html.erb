<!DOCTYPE html>
<html>
<head>
  <title>HeinzDigitalAssets</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="padding-top: 50px;">
	<% if user_signed_in? %>
		<div class="navbar navbar-inverse navbar-fixed-top " role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<% if current_user.admin? %>
						<a class="navbar-brand" href="#"style="color: #d3d3d3;">Admin Panel</a>
					<% else %>
						<a class="navbar-brand" href="#"style="color: #d3d3d3;">Heinz Assets</a>
					<% end %>
				</div>
				<div class="collapse navbar-collapse">
					<% if current_user.admin? %>
						<ul class="nav navbar-nav">
							<li class="<%=is_active('users')%>"><%= link_to "Users", users_path, style:"color: #d3d3d3;" %></li>
							<li class="<%=is_active('categories')%>"><%= link_to "Categories", categories_path, style:"color: #d3d3d3;" %></li>
						</ul>
					<% end %>
					<ul class="nav navbar-nav navbar-right">
						<li class="navbar-text" style="color: #d3d3d3;">Hello <strong><%= current_user.name %></strong>!</li>
						<li><%= button_to 'Edit profile', edit_user_registration_path, method: :get, :class => 'btn btn-primary navbar-btn btn-sm', style: "margin-right: 6px;"%></li>
						<li><%= button_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-danger navbar-btn btn-sm'  %></li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
	<% end %>
	<%= yield %>
	<footer class="container"><p>&copy; Heinz Brasil 2014</p> </footer>
</body>
</html>
