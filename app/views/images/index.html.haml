.jumbotron{style: "padding: 20px;"}
	.container
		%ul.list-inline
			%li
				%h1 
					#{@category.name}
					%small Images
			%li= link_to 'New Image', new_category_image_path(category_id: @category.slug), method: :get, :class => "btn btn-info btn-sm", style: "margin-bottom: 20px;"
			%li= link_to 'Back', category_path(@category), :class => "btn btn-warning btn-sm", style: "margin-bottom: 20px;"
.container
	%table{class: "table table-striped table-bordered table-condensed"}
		%thread
			%tr
				%th.text-center #
				%th.text-center Name
				%th.text-center Image
				%th.text-center Actions 
		- @images.each do |img|
			%tr
				%td{:style=>"vertical-align: middle;", :class=>"text-center"}= img.id 
				%td{:style=>"vertical-align: middle;", :class=>"text-center"}= img.name
				%td{:style=>"vertical-align: middle;", :class=>"text-center"}= link_to image_tag(img.avatar.url(:thumb)), category_image_path(@category.id, img.id)
				%td{:style=>"vertical-align: middle;", :class=>"text-center"}
					= link_to "Destroy", category_image_path(@category.id, img.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm"
