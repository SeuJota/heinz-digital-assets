.col-sm-10.heinzhd.text-center{style: "padding-top: 8%"}
  = image_tag("heinz_header.png")
  %h1{style: "color: white; margin-bottom: 15px; margin-top:25px; font-size: 2em;"}
    \\
    - @category.ancestors.each do |cat|
      =link_to cat.name, cat, style: "color: white"
      \\
  %p{style: "color:#fff;"} ||
  %ul{style: "padding: 0px; padding-top: 0px; list-style: none;margin-bottom: 50px;"}
    - @category.children.each do |cat|
      %li{style: "margin-bottom: 10px;"}= link_to cat.name, cat, style: "font-size: 14pt; font-weight: 600;color: #fff;"
.col-sm-2.quero.text-center
  =link_to image_tag("quero_header.png", style: "width: 100%;"), category_path(id: "quero")
