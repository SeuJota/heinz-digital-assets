<%= form_for @category, html: { role: "form", :class => "form-horizontal text-center"}  do |f| %>
	<% if @category.errors.full_messages.any? %>
		<% @category.errors.full_messages.each do |error_message| %>
		<%= error_message if @category.errors.full_messages.first == error_message %> <br />
	<% end %>
	<% end %>
	<div class="form-group text-center">
		<%= f.label :name, :class => "col-sm-4 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :name, :class => "form-control" %>
	</div>
	</div>
	<div class="form-group text-center">
		<%= f.label :parent, :class => "col-sm-4 control-label" %>
		<div class="col-sm-4">
			<%= f.collection_select(:parent_id, Category.order(:id),:id, :name, {prompt: "Select a category", selected: @parent}, {class: "form-control"}) %>
		</div>	
	</div>
	<div class="form-group text-center">
		<%= f.submit 'Submit', :class => "btn btn-success" %>
		<% if @category.new_record? %>
			<% if @parent %>
				<%= link_to 'Back', nested_category_path(Category.find(@parent)),:class => "btn btn-warning" %>
			<% else %>
				<%= link_to 'Back', categories_path, :class => "btn btn-warning" %>
			<% end %>
		<% else %>
			<%= link_to "Cancel", "", :class => "btn btn-primary cancel" %>
		<% end %>
	</div>
<% end %>
