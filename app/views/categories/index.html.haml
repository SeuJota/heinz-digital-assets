.jumbotron{style: "padding: 20px;"}
	.container
		%ul.list-inline
			%li
				%h1 
					Categories
					%small #{@title}
			%li= button_to 'New Category', new_category_path, method: :get, :class => "btn btn-primary btn-sm", style: "margin-left: 30px; margin-bottom: 20px"

.container
	%table{class: "table table-striped table-bordered table-condensed"}
		%thread
			%tr
				%th.text-center #
				%th.text-center Name
				%th.text-center Parent
				%th.text-center Height
				%th.text-center Actions 
		- @categories.each do |cat|
			%tr
				%td.text-center= cat.id
				%td.text-center= link_to cat.name, cat, :class => "btn btn-link"
				%td.text-center= cat.parent ? cat.parent.name : "root"
				%td.text-center= cat.height
				%td.text-center
					= link_to "Edit", edit_category_path(id: cat.id), :class => "btn btn-primary btn-sm edit" , remote: true
					= link_to "Destroy", category_path(id: cat.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm"
			%tr{class: "edit_form#{cat.id}", style: "display: none;"}
