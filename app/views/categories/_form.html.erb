<%= form_for(@category) do |f| %>
<% if @category.errors.full_messages.any? %>
<% @category.errors.full_messages.each do |error_message| %>
<%= error_message if @category.errors.full_messages.first == error_message %> <br />
<% end %>
<% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :parent %><br>
    <%= f.collection_select(:parent_id, Category.order(:id),:id,:name, include_blank: true, selected: @parent)%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
