<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th> 
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image_tag image.avatar.url(:thumb) %></td>
        <td><%= link_to 'Show', category_image_path(@category,image) %></td>
        <td><%= link_to 'Edit', edit_category_image_path(@category,image) %></td>
        <td><%= link_to 'Destroy', category_image_path(@category, image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_category_image_path %>