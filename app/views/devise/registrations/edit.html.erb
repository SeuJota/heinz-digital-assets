<div class="container">
	<div class="jumbotron text-center" style="margin-top: 20px;" >
		<h1 style="font-size: 3.5em;">Editar Perfil</h1>

		<br/>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put ,role: "form", :class => "form-horizontal text-center"}) do |f| %>
			<%= devise_error_messages! %>

			<div class="form-group text-center">
				<%= f.label :email, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.email_field :email, autofocus: true, :class => "form-control" %>
				</div>
			</div>

			<div class="form-group text-center">
				<%= f.label :nome, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :name, autocomplete: "off", :class => "form-control" %>
				</div>
			</div>

			<div class="form-group text-center">
				<%= f.label :nova_senha, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
					<i>(Deixe o campo em branco, caso não queira alterar senha)</i>
				</div>
			</div>

			<div class="form-group text-center">
				<%= f.label :confirmação_senha, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
				</div>
			</div>
			<div class="form-group text-center">
				<%= f.label :nome, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :name, :class => "form-control" %>
				</div>
			</div>
			<div class="form-group text-center">
				<%= f.label :email, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :email, :class => "form-control" %>
				</div>
			</div>
			<div class="form-group text-center">
				<%= f.label :empresa, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :company, :class => "form-control" %>
				</div>
			</div>
			<div class="form-group text-center">
				<%= f.label :departamento, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :area, :class => "form-control" %>
				</div>
			</div>
			<div class="form-group text-center">
				<%= f.label :endereço, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :address, :class => "form-control" %>
				</div>
			</div>
			<div class="form-group text-center">
				<%= f.label :telefone, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.text_field :phone, :class => "form-control" %>
				</div>
			</div>


			<div class="form-group text-center">
				<%= f.label :senha_atual, :class => "col-sm-4 control-label" %>
				<div class="col-sm-4">
					<%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
					 <i>(Precisamos da sua senha atual para confirmar mudanças)</i>
				</div>
			</div>

			<div class="form-group text-center">
				<%= f.submit "Atualize", :class => "btn btn-primary" %>
				<%= link_to "Voltar", :back, :class => "btn btn-warning" %>
			</div>
		<% end %>

	</div>
</div>
